<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/template.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:template file="parts/header.xml"/>
			<!-- Content Start-->
			<div id="content">
				<div class="wrap color_bg">
					<div class="inner_wrap">
						<div class="page_title_container">
							<h1>
								<cms:text constant="our-method"/>
							</h1>
							<span>
								<cms:text constant="about_subtitle"/>
							</span>
						</div>
						<div class="page_content_container">
							<cms:module
								name="articles"
								action="show"
								text_id="our_method"
								template="parts/article_no_title.xml"
							/>
						</div>
					</div>
					<div class="our_method_icon_container">
						<div class="inner_wrap">
							<span>
								<cms:text constant="method_1"/>
							</span>
							<span>
								<cms:text constant="method_2"/>
							</span>
							<span>
								<cms:text constant="method_3"/>
							</span>
						</div>
					</div>
				</div>
				<div class="wrap white">
					<div class="inner_wrap">
						<div class="two_thirds">
							<cms:module
								name="articles"
								action="show"
								text_id="proven_method"
							/>
						</div>
						<div class="one_third">
							<img
								src="_BASEURL.'/images/proven-success-model.jpg'"
								alt="proven success model"
								cms:eval="src"
							/>
						</div>
					</div>
				</div>
			</div>
			<!-- Content End -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>